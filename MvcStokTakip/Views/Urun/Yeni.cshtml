@model MvcStokTakip.Models.Entity.Urunler
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post" style="width:50%">
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(m => m.ad, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ad, "", new { @class = "text-danger" })
    <div>
        <label>Marka</label>
        @Html.DropDownListFor(m => m.Markalar.id, (List<SelectListItem>)ViewBag.markalar, new { @class = "form-control" })
    </div>
    <div>
        <label>Kategori</label>
        @Html.DropDownListFor(m => m.Kategoriler.id, (List<SelectListItem>)ViewBag.kategoriler, new { @class = "form-control" })
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="stok" />
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="fiyat" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>
