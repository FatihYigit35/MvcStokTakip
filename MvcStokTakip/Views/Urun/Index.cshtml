@using MvcStokTakip.Models.Entity;
@model List<Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Ad</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat (TL)</th>
            <th>Stok (Adet)</th>
            <th>Ürün Sil</th>
            <th>Ürün Günclle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.id</td>
                <td>@urun.ad</td>
                <td>@urun.Markalar.ad</td>
                <td>@urun.Kategoriler.ad</td>
                <td>@urun.fiyat</td>
                <td>@urun.stok</td>
                <td><a href="/Urun/Sil/@urun.id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/Getir/@urun.id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/Yeni" class="btn btn-success">Yeni Ürün Ekle</a>

<script type="text/javascript" src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
<link href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>